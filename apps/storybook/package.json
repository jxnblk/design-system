{
  "name": "@priceline/storybook",
  "version": "1.0.0",
  "description": "Storybook for pcln-design-system",
  "license": "MIT",
  "author": "Priceline Design System Working Group",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "",
    "start": "storybook dev -p 8000",
    "storybook": "run-s storybook:build chromatic",
    "storybook:baseline": "run-s storybook:build storybook:baseline:chromatic",
    "storybook:build": "storybook build --output-dir=../docs/out/storybook",
    "storybook:baseline:chromatic": "chromatic --storybook-build-dir=../docs/out/storybook --auto-accept-changes --exit-once-uploaded",
    "chromatic": "chromatic --storybook-build-dir=../docs/out/storybook --exit-once-uploaded --only-changed --trace-changed --untraced=**/package.json",
    "storybook:coverage": "test-storybook --coverage"
  },
  "devDependencies": {
    "@priceline/eslint-config": "workspace:*",
    "@rushstack/eslint-patch": "^1.3.2",
    "@storybook/addon-a11y": "^7.1.1",
    "@storybook/addon-actions": "^7.1.1",
    "@storybook/addon-coverage": "^0.0.9",
    "@storybook/addon-designs": "^7.0.1",
    "@storybook/addon-essentials": "^7.1.1",
    "@storybook/addon-interactions": "^7.1.1",
    "@storybook/addon-viewport": "^7.1.1",
    "@storybook/jest": "^0.1.0",
    "@storybook/react": "^7.1.1",
    "@storybook/react-vite": "^7.1.1",
    "@storybook/testing-library": "^0.2.0",
    "babel-plugin-react-docgen": "^4.2.1",
    "chromatic": "^6.20.0",
    "eslint": "^8.45.0",
    "npm-run-all": "^4.1.5",
    "pcln-design-system": "workspace:*",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "require-from-string": "2.0.2",
    "storybook": "^7.1.1",
    "styled-components": "^5.3.11",
    "typescript": "^5.1.6",
    "vite": "^4.4.7"
  }
}
