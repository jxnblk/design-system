{
  "name": "@priceline/storybook",
  "version": "1.0.0",
  "description": "Storybook for pcln-design-system",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "",
    "start": "start-storybook --quiet -p 8000",
    "storybook": "run-s storybook:build chromatic",
    "storybook:baseline": "run-s storybook:build storybook:baseline:chromatic",
    "storybook:build": "build-storybook -o ../docs/out/storybook --quiet",
    "storybook:baseline:chromatic": "chromatic --storybook-build-dir=../docs/out/storybook --auto-accept-changes --exit-once-uploaded",
    "chromatic": "chromatic --storybook-build-dir=../docs/out/storybook --exit-once-uploaded"
  },
  "author": "Priceline Design System Working Group",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@priceline/babel-preset": "workspace:*",
    "@priceline/eslint-config": "workspace:*",
    "@rushstack/eslint-patch": "^1.1.0",
    "@storybook/addon-essentials": "^6.4.12",
    "@storybook/addon-a11y": "^6.4.12",
    "@storybook/addon-viewport": "^6.4.12",
    "@storybook/builder-webpack5": "^6.4.12",
    "@storybook/manager-webpack5": "^6.4.12",
    "@storybook/react": "^6.4.12",
    "@storybook/theming": "^6.4.12",
    "@storybook/addons": "^6.4.12",
    "@storybook/channels": "^6.4.12",
    "@storybook/components": "^6.4.12",
    "@storybook/core-events": "^6.4.12",
    "babel-loader": "^8.2.3",
    "babel-plugin-react-docgen": "4.2.1",
    "chromatic": "^6.3.4",
    "eslint": "^8.6.0",
    "npm-run-all": "^4.1.5",
    "pcln-design-system": "workspace:4.13.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-draggable-playground": "^1.0.0",
    "storybook-addon-performance": "^0.16.1",
    "styled-components": "^4.4.1",
    "webpack": "^5.66.0",
    "typescript": "^4.5.4",
    "react-is": "^17.0.2"
  }
}
