{
  "name": "pcln-carousel",
  "version": "0.0.1",
  "description": "Priceline Design System Carousel Component",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/priceline/design-system.git"
  },
  "bugs": {
    "url": "https://github.com/priceline/design-system/issues"
  },
  "homepage": "https://github.com/priceline/design-system#readme",
  "engines": {
    "node": ">=8.0.0 <9.0.0 || >=10.0.0",
    "npm": ">=5.10.0 || >=6.0.0"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "cross-env NODE_ENV=production BABEL_ENV=cjs babel ./src --ignore '**/*.stories.js,**/*.spec.js' --out-dir ./dist/cjs",
    "build:esm": "cross-env NODE_ENV=production BABEL_ENV=esm babel ./src --ignore '**/*.stories.js,**/*.spec.js' --out-dir ./dist/esm",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --verbose --coverage",
    "test:ci": "jest --silent --coverage --runInBand",
    "test:update": "jest --updateSnapshot",
    "test:ci:update": "jest --runInBand --updateSnapshot"
  },
  "author": "Priceline",
  "contributors": [
    {
      "name": "Craig Palermo",
      "email": "email@craigp.me"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "@types/styled-system": "^4.2.2",
    "prop-types": "^15.8.1",
    "pure-react-carousel": "^1.27.8",
    "moize": "^6.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@priceline/babel-preset": "workspace:*",
    "@priceline/eslint-config": "workspace:*",
    "@rushstack/eslint-patch": "^1.1.0",
    "@storybook/addon-actions": "^6.4.10",
    "@storybook/react": "^6.4.10",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "jest": "^26.6.3",
    "jest-standard-reporter": "^2.0.0",
    "jest-styled-components": "^6.3.4",
    "npm-run-all": "^4.1.5",
    "pcln-design-system": "workspace:*",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "styled-components": "^4.4.1",
    "typescript": "^4.5.4"
  },
  "peerDependencies": {
    "react": ">= 16.10.0",
    "react-dom": ">= 16.10.0",
    "styled-components": ">=4.4.1",
    "pcln-design-system": ">=4.10"
  }
}
